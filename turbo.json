{
    "$schema": "https://turborepo.com/schema.json",
    "globalEnv": ["NODE_ENV"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"]
        },
        "api#build": {
            "dependsOn": ["^build"],
            "env": ["PORT", "API_ORIGIN", "WEB_ORIGIN", "DATABASE_MAX_RETRIES", "DATABASE_URL"],
            "outputs": ["dist/**"]
        },
        "@auth-saas/database#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist"]
        },
        "db:deploy": {
            "cache": false
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "clean": {
            "dependsOn": ["^clean"],
            "cache": false
        },
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false
        },
        "start": {
            "dependsOn": ["^start"],
            "cache": false
        },
        "start:dev": {
            "dependsOn": ["^start:dev"],
            "cache": false
        }
    }
}
